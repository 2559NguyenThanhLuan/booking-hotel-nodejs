            <a href="/services" class="btn btn-sm btn-outline-dark rounded-3 fw-bold shadow-none">More Features >>></a>
        </div>

        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-4 mt-5">Facilities</h6>
            <h1 class="mb-5">Our Facilities</h1>
        </div>
        <div class="row g-4 justify-content-center">
            <% facilities.forEach(facility => { %>
